@model MvcTienda.Models.Producto
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Estás seguro de que quieres eliminar este Producto</h3>
<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.Nombre)
        </dt>
        <br />
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.IdMarca)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.IdMarca)
        </dt>
        <br />
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.IdCategoria)
        </dt>
        <br />
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.Stock)
        </dt>
        <br />
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.Precio)
        </dt>
        <br />
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dt class="col-sm-8">
            @Html.DisplayFor(model => model.Descripcion)
        </dt>
        <br />
        <dd class="col-sm-10">
            <img style="height:60px ;" src="@Model.UrlFoto" class="rounded mx-auto d-block" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>



